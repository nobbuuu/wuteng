<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@mipmap/home">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="72px"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weather_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="27°"
                    android:textColor="@color/color_ffffff"
                    android:textSize="120px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="多云转晴"
                    android:id="@+id/weather_2"
                    android:textColor="@color/color_ffffff"
                    android:textSize="28px"
                    android:layout_below="@+id/weather_1"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="2dp"
                    android:id="@+id/line"
                    android:layout_below="@id/weather_1"
                    android:layout_toRightOf="@id/weather_2"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="2dp"
                    android:background="@color/color_ffffff"
                    android:textColor="@color/color_ffffff"
                    android:layout_height="35px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="空气良"
                    android:id="@+id/weather_3"
                    android:layout_below="@id/weather_1"
                    android:layout_toRightOf="@id/line"
                    android:layout_marginLeft="24px"
                    android:textColor="@color/color_ffffff"
                    android:textSize="28px"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="192px"
                    android:id="@+id/weather_4"
                    android:layout_toRightOf="@+id/weather_3"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_launcher"
                    android:layout_marginLeft="10dp"
                    android:layout_height="155px" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="71px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="398px"
                    android:layout_height="212px"
                    android:id="@+id/act_ll"
                    android:background="@drawable/rectangle_rlightblue"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="123px"
                        android:layout_height="122px"
                        android:layout_marginLeft="50px"
                        android:background="@drawable/icon_program" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="节目单"
                        android:textColor="@color/color_ffffff"
                        android:textSize="36px" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="398px"
                    android:layout_height="212px"
                    android:id="@+id/about_ll"
                    android:background="@drawable/rectangle_lightgreen"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="123px"
                        android:layout_height="122px"
                        android:layout_marginLeft="50px"
                        android:background="@drawable/icon_ahoutus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:text="关于我们"
                        android:textColor="@color/color_ffffff"
                        android:textSize="36px" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@color/color_0066cc"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎你使用广告发布系统智能终端"
            android:textColor="@color/color_ffffff"
            android:textSize="42px" />
    </LinearLayout>


</LinearLayout>